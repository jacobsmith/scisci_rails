<h1>All Projects</h1>

<table>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <% if current_user.is_a_teacher? %>
          <td><%= User.find(project.user_id).username %></td>
        <% end %>
          <td><%= link_to project.name, project %></td>
          <td><%# link_to 'Edit', edit_project_path(project) %></td>
          <td><%# link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>

      <% if @projects == [] %>
        <p>It looks like you don't have any projects yet...click the button below to get started!</p>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class: "button radius large-offset-1" if !@class_project %>
