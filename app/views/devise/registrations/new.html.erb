<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="small-10 columns">
      <div class="small-2 columns"><%= f.label :username, class: "right inline" %></div>
      <div class="small-10 columns"><%= f.text_field :username, :autofocus => true %></div>
    </div>
  </div>

  <div class="row">
    <div class="small-10 columns">
      <div class="small-2 columns"><%= f.label :password, class: "right inline" %></div>
      <div class="small-10 columns"><%= f.password_field :password %></div>
    </div>
  </div>

  <div class="row">
    <div class="small-10 columns">
      <div class="small-2 columns"><%= f.label :password_confirmation, class: "right inline" %></div>
      <div class="small-10 columns"><%= f.password_field :password_confirmation %></div>
    </div>
  </div>
  
  <div><%= f.submit "Sign up", class: "button radius" %></div>
<% end %>

<%= render "devise/shared/links" %>
