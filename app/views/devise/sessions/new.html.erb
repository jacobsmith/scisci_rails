<div class="login-form row">
  <h1>SciSci Notes</h1>

  <%= form_for(resource, :as => resource_name, :html => { :class => 'medium-8 large-7 medium-centered columns' }, :url => session_path(resource_name)) do |f| %>


    <div class="form-field">
      <%= f.label :username %>
      <%= f.text_field :username, :autofocus => true %>
    </div>

    <div class="form-field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <%= f.submit "Log in", class: "button radius submit" %>
  <% end %>
</div>

<div class="login-form-options">
  <%= render "devise/shared/links" %>
</div>
