<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class="row">
    <div class="small-10 columns">
      <div class="small-2 columns"><%= f.label :username, class: "right inline" %></div>
      <div class="small-10 columns"><%= f.text_field :username, :autofocus => true %></div>
    </div>
  </div>
  
  <div class="row">
    <div class="small-10 columns">
      <div class="small-2 columns"><%= f.label :password, class: "right inline" %></div>
      <div class="small-10 columns"><%= f.password_field :password %></div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", class: "button radius" %></div>
<% end %>

<%= render "devise/shared/links" %>
