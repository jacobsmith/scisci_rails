<h1>Listing sources</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Url</th>
      <th>Comments</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sources.each do |source| %>
      <tr>
        <td><%= source.title %></td>
        <td><%= source.author %></td>
        <td><%= source.url %></td>
        <td><%= source.comments %></td>
        <td><%= link_to 'Show', project_sources_path(source) %></td>
        <td><%= link_to 'Edit', edit_project_source_path(source.project, source) %></td>
        <td><%= link_to 'Destroy', project_source_path( source.project, source ), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

