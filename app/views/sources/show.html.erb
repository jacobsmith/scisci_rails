<div id="notice"><%= notice %></div>

<h1 class="page-title"><%= @source.title %></h1>
<p>
<%= original_link(@source) %>
</p>

<ul class="note-list">
  <% @source.notes.each do |note| %>
    <li><div class="note"><a href="<%= note_path(note) %>"
      <p class="note__comment"><%= note.comments %></p>
      <p class="note__quote"><%= note.quote %></p>
      <p class="note__source">Source: The Visual Display of Quantitative Information</p>
    </a></div></li>
  <% end %>
</ul>

