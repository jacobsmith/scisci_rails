<div id="notice"><%= notice %></div>

<h1><%= @source.title %></h1>
<p>
<%= original_link(@source) %>
</p>

<blockquote class="small-12 columns">
  <%= @source.comments if @source.comments %>
</blockquote>

<table>
  <thead>
    <tr>
      <th>Quote</th>
      <th>Comments</th>
      <th>Tags</th>
    </tr>
  </thead>
  <tbody>
    <% @source.notes.each do |note| %>
      <tr>
        <td><%= note.quote %></td>
        <td><%= note.comments %></td>
        <td><%= tags_list(note) %></td>
      <% end %>
    </tr>
    <% if @source.notes.empty? %>
      <tr>
        <td>Please add a note below to begin.</td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Note', new_source_note_path( @source), class: "button radius" %> |
<%= link_to 'Edit Source Information', edit_source_path(@source) %> |
<%= link_to 'Back', project_sources_path(@source.project) %>
