<h1 class="page-title">Tags for <span style="color: #c00"><%= @project.name %></span></h1>

<div class="action-bar">
  <p class="subtitle">You've applied a tag <%= pluralize(@tags.length, 'times') %> for this project.</p>
</div>

<ul class="note-list">
  <% @tags.each do |tag| %>
    <li><div class="note"><a href="<%= note_path(tag.note) %>">
      <p class="note__comments"><%= truncate(tag.note.comments, :length => 100, :omission => '...') %></p>
    </a></div></li>
  <% end %>
</ul>
