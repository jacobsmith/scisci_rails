<%# url = (action_name == "new" ? {:action=>"create", :controller=>"notes"} : {:action=>"update", :controller=>"notes"})%>
<% if action_name == "new" %>
  <% url = {:action=>"update", :controller=>"notes"} %>
<% elsif action_name == "update" %>
  <% url = {:action=>"create", :controller=>"notes"} %>
  <% else %>
  <%= url = nil%>
<% end %>

<%= form_for([ @note.source, @note ], url: url ) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :quote %><br>
    <%= f.text_area :quote %>
  </div>
  <div class="field">
    <%= f.label :comments %><br>
    <%= f.text_area :comments %>
  </div>
  <div class="field">
    <%= f.label :tags, "Tags (seperated by commas)" %><br>
    <%= f.text_field :tags %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
