<ul class="note-list">
  <% if @source && @source.notes != [] %>
    <% @source.notes.each do |note| %>
      <li>
        <div class="note">
          <p class="note__comments"><%= truncate(note.comments, :length => 100, :omission => '...') %></p>
          <p class="note__quote"><%= truncate(note.quote, :length => 100, :omission => '...') %></p>
          <p class="note__tags"><%= tag_list(note) %></p>
        </div>
      </li>
    <% end %>
  <% elsif @project && @project.notes != [] %>
    <% @project.notes.each do |note| %>
      <li>
      <div class="note">
        <p class="note__comments"><%= truncate(note.comments, :length => 100, :omission => '...') %></p>
        <p class="note__quote"><%= truncate(note.quote, :length => 100, :omission => '...') %></p>
        <p class="note__tags"><%= tag_list(note) %></p>
      </div>
      </li>
    <% end %>
  <% else %>
    <div>
      <p>Hmm...you don't seem to have anything here yet. Click one of the buttons below to get started!</p>
      <% if @project %>
        <p class="button small"><%= link_to "Add a source!", new_project_source_path(@project) %></p>
      <% elsif @source %>
        <p class="button small"><%= link_to "Add a note!", new_source_note_path(@source) %></p>
      <% end %>
    </div>
  <% end %>
  </ul>

