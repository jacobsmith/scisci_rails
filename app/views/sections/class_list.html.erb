<h1>All Projects</h1>
<table id="projectsTable">
  <thead>
      <td>Student</td>
      <td>Project</td>
      <td>Source Count</td>
      <td>Note Count</td>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <% if current_user.is_a? Teacher %>
          <td><%= User.find(project.user_id).username %></td>
        <% end %>
          <td><%= link_to project.name, project %></td>
          <td><%= project.sources.count %></td>
          <% count = 0 %>
          <% project.sources.each do |i| %>
            <% count += i.notes.count %>
          <% end %>
            <td><%= count %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class: "button radius large-offset-1" %>
