<div style="padding-top: 20px" id="project-thesis">
  <% if @project.try(:thesis).try(:present?) %>
    <%= form_for(@project, remote: true, html: { 'data-type' => 'json', id: 'update_thesis_form' }) do |t| %>

      <div class="form-field">
        <%= t.label :thesis, 'Thesis' %>
        <%= t.text_field :thesis, :onfocus => 'showThesisButtons();' %>
      </div>

      <%= t.submit( "Update Thesis", class: "small button submit", id: 'thesis-submit', style: 'display:none', onclick: 'hideThesisButtons()' ) %>
      <%= button_tag "Cancel", type: :reset, onclick: 'hideThesisButtons()', style: 'display:none', class: 'small button secondary', id: 'thesis-cancel' %>
    <% end %>
  <% end %>
</div>
