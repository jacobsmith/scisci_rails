<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "SciSci Notes" %></title>

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600,700,400italic' rel='stylesheet' type='text/css'>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= render 'layouts/top_bar' %>

    <!-- Class header -->
    <div class="class-header">
      <div class="row">
        <div class="small-12 columns">
          <p class="class-header-title">US History</p>
        </div>
      </div>
    </div>
    <!-- /Class header -->
    <!-- Project nav -->
    <div class="project-nav">
      <div class="row">
        <div class="small-12 columns">
            <h1 class="project-nav-title">Project name</h1>
            <ul class="project-nav-menu">
              <li class="<%= "active" if current_page?(projects_path) %>"><%= link_to "Overview", projects_path %></li>
              <li><%= link_to "Sources", sources_path(@project) if @project %></li>
              <li><%= link_to "Notes", source_notes_path(@source) if @source.id %></li>
              <li><a href="#">Tags</a></li>
          </ul>
        </div>
      </div>
    </div>
    <!-- /Project nav -->

    <div class="row main" role="main">
      <div class="large-12 columns">
        <%= render 'layouts/flash_error_messages' %>
        <%= render 'layouts/breadcrumbs' %>

        <%= yield %>
        <%= javascript_include_tag "application" %>

        <%= debug(params) if Rails.env.development? %>

      </div>
    </div>
  </body>
</html>
